        <if test="shopId != null">
            and d.shop_id = #{shopId}
        </if>
        <if test="typeId != null">
            and ct.type_id = #{typeId}
        </if>
        <if test="commName != null">
            and c.comm_name like '%${commName}%'
        </if>
         group by d.comm_id
        <if test="priceSort != null">
            order by c.comm_price ${priceSort}
        </if>
